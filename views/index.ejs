<html lang = "en">
    <%- include('./partials/head.ejs') %>         
    <body>

        <%- include('./partials/nav.ejs') %>

        <div class="blogs content">
            <h2>All blogs</h2>

            <% if (blogs.length > 0){ %>
                <% blogs.forEach(blog => { %>
                    <a href="/blogs/<%= blog._id %>" class="custom-card single">
                    <div class="card card-primary card-outline mt-3">
                        <div class="card-header head" style="text-decoration: none;"><%= blog.title %></div>
                        <div class="card-body" style="text-decoration: none;"><%= blog.snippet %></div>
                    </div>
                    </a>
                <% }) %>
            <% }else{ %>
                <p>No blogs to display</p>
            <% } %>
        </div>

        <%- include('./partials/footer.ejs') %>
        
    </body>
</html>