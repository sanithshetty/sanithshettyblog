<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
    <div class="container-fluid content">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <h4 class="text-muted text-center">Add New Blogs</h4>
                        <form class="form-horizontal" action="/blogs" method="POST">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Blog title: <span
                                            style="color:red">*</span></label>
                                    <div class="col-sm-8">     
                                        <input type="text" id="title" name="title" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Blog snippet: <span
                                            style="color:red">*</span></label>
                                    <div class="col-sm-8">     
                                        <input type="text" id="snippet" name="snippet" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Blog body: <span
                                            style="color:red">*</span></label>
                                    <div class="col-sm-8">     
                                        <textarea id="body" name="body" required></textarea>
                                    </div>
                                </div>
                            </div>
        
                            <div class="float-right mr-4">
                                <center><button class="btn btn-outline-success mr-1" name="save"><i
                                            class="fa fa-upload">
                                            <lable class="font-weight-normal"> Submit</lable>
                                        </i></button>
                                    <a href="/" class="btn btn-outline-primary"><i
                                            class="fa fa-reply">
                                            <lable class="font-weight-normal"> Back</lable>
                                        </i></a>
                                </center>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
    </body>
</html>